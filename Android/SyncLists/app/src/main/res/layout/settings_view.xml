<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/changePassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            android:layout_gravity="bottom"
            android:textSize="30sp"
            android:onClick="onChangePasswordClicked"
            android:clickable="true"
            android:textColor="@color/selector_txt"
            android:background="@color/selector_background_txt"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/snycEvery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sync_every"
            android:layout_gravity="bottom"
            android:textSize="30sp"
            android:onClick="onSyncEveryClicked"
            android:clickable="true"
            android:textColor="@color/selector_txt"
            android:background="@color/selector_background_txt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/instructions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/instructions"
            android:layout_gravity="bottom"
            android:textSize="30sp"
            android:onClick="onInstructionsClicked"
            android:clickable="true"
            android:textColor="@color/selector_txt"
            android:background="@color/selector_background_txt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/logout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:layout_gravity="bottom"
            android:textSize="30sp"
            android:onClick="onLogoutClicked"
            android:clickable="true"
            android:textColor="@color/selector_txt"
            android:background="@color/selector_background_txt"/>
    </LinearLayout>

</LinearLayout>